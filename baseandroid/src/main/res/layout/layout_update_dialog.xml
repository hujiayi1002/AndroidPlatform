<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/update_bg"
    android:minHeight="310dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@mipmap/update_dialog_top">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:text="发现新版本"
            android:textColor="#fff"
            android:textSize="18sp" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:background="#fff">

        <TextView
            android:id="@+id/tv_update_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:lineSpacingMultiplier="1.5"
            android:text="本次更新优化了部分功能,提升了用户体验,建议立即升级" />

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"

        android:paddingTop="15dp">

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:background="@drawable/round_bg"
            android:gravity="center"
            android:text="立即升级"
            android:textColor="#fff" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_no_upgrade"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#fff"
        android:gravity="right|center_vertical"
        android:paddingRight="45dp"
        android:text="暂不升级"
        android:textSize="13sp" />
</LinearLayout>


